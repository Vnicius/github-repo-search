<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="io.github.vnicius.githubreposearch.ui.reposearch.RepoSearchFragment"
        android:label="RepoSearchFragment">
        <action
            android:id="@+id/action_searchFragment_to_repoDetailsFragment"
            app:destination="@id/repoDetailsFragment" />
    </fragment>


    <dialog
        android:id="@+id/repoDetailsFragment"
        android:name="io.github.vnicius.githubreposearch.ui.repodetail.RepoDetailsFragment"
        android:label="RepoDetailsFragment">
        <argument
            android:name="repo"
            app:argType="io.github.vnicius.githubreposearch.data.model.Repo"
            app:nullable="false" />
    </dialog>
</navigation>