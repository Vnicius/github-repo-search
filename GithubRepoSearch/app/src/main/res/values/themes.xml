<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubRepoSearch" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/engineer_black</item>
        <item name="colorPrimaryVariant">@color/engineer_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/engineer_black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="splashScreenLogo">@drawable/ic_splash_logo</item>
        <item name="searchBarStyle">@style/SearchBarStyle</item>
        <item name="colorPrimaryBackground">@color/black</item>
        <item name="colorSecondaryBackground">@color/engineer_black</item>
        <item name="colorPrimaryText">@color/white</item>
        <item name="colorHintText">@color/aged_grey</item>
        <item name="colorUnknownLanguageText">@color/charcoal</item>
    </style>

    <!--  region SplashScreen theme  -->
    <style name="Theme.SplashScreen" parent="Theme.GithubRepoSearch">
        <item name="android:statusBarColor">?colorSecondaryBackground</item>
        <item name="android:navigationBarColor">?colorSecondaryBackground</item>
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>
    <!--  endregion  -->

    <!--  region SearchBar style  -->
    <style name="SearchBarStyle">
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="drawableEndCompat">@drawable/ic_close</item>
        <item name="android:textColorHint">?colorHintText</item>
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>
    <!--  endregion  -->

    <!--  region Text Styles  -->
    <style name="Text">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">?colorPrimaryText</item>
    </style>
    <!--  endregion  -->
</resources>