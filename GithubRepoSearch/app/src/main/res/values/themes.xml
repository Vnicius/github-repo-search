<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubRepoSearch" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/engineer_black</item>
        <item name="colorPrimaryVariant">@color/engineer_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/engineer_black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSplashScreenBackground">@color/engineer_black</item>
        <item name="splashScreenLogo">@drawable/ic_splash_logo</item>
    </style>

    <style name="Theme.SplashScreen" parent="Theme.GithubRepoSearch">
        <item name="android:statusBarColor" tools:targetApi="l">@color/engineer_black</item>
        <item name="android:navigationBarColor">@color/engineer_black</item>
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>
</resources>