<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubRepoSearch" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/engineer_black</item>
        <item name="colorPrimaryVariant">@color/engineer_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/engineer_black</item>
        <item name="android:navigationBarColor">@color/engineer_black</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="appLogo">@drawable/ic_splash_logo</item>
        <item name="searchBarStyle">@style/SearchBarStyle</item>
        <item name="colorPrimaryBackground">@color/black</item>
        <item name="colorSecondaryBackground">@color/engineer_black</item>
        <item name="colorPrimaryText">@color/white</item>
        <item name="colorHintText">@color/aged_grey</item>
        <item name="colorUnknownLanguageText">@color/charcoal</item>
        <item name="colorBottomNavItemSelected">@color/white</item>
        <item name="colorBottomNavItemUnselected">@color/devil_grey</item>
        <item name="textFontRegular">@font/roboto_regular</item>
        <item name="textFontMedium">@font/roboto_medium</item>
        <item name="colorBodyText">@color/before_grey</item>
        <item name="colorTextStars">@color/mango</item>
    </style>

    <!--  region SplashScreen theme  -->
    <style name="Theme.SplashScreen" parent="Theme.GithubRepoSearch">
        <item name="android:statusBarColor">?colorSecondaryBackground</item>
        <item name="android:navigationBarColor">?colorSecondaryBackground</item>
        <item name="android:windowBackground">@drawable/background_splash_screen</item>
    </style>
    <!--  endregion  -->

    <!--  region SearchBar style  -->
    <style name="SearchBarStyle">
        <item name="drawableStartCompat">@drawable/ic_search</item>
        <item name="drawableEndCompat">@drawable/ic_close</item>
        <item name="android:textColorHint">?colorHintText</item>
        <item name="android:textColor">?colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:drawablePadding">@dimen/spacing_small</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>
    <!--  endregion  -->

    <!--  region Text Styles  -->
    <style name="Text">
        <item name="fontFamily">?textFontRegular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">?colorPrimaryText</item>
    </style>

    <style name="Text.Primary.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Primary.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="Text.Primary.Small.Medium">
        <item name="fontFamily">?textFontMedium</item>
    </style>

    <style name="Text.Primary.Big">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="Text.Primary.Big.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">?colorBodyText</item>
    </style>

    <style name="Text.Body.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <!--  endregion  -->
</resources>